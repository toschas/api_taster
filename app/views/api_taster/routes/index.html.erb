<div id="main-container" class="row-fluid">
  <div id="list-api-div" class="span5">
    <div class="div-container">
      <div class="div-container">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h4 class="panel-title">Custom headers</h3>
          </div>
          <div class="panel-body">
            <form>
              <div id="xhr-headers" class="form-inline">
                <div class="form-group" style="margin-bottom: 10px;">
                  <input type="checkbox" class="check-header">
                  <input type="text" class="form-control header" placeholder="Header"disabled>
                  <input type="text" class="form-control value" placeholder="Value" disabled>
                  <button id="delete-header-0" type="button" class="btn btn-danger remove-header">
                    &times;
                  </button>
                </div>
              </div>
            </form>
            <button id="add-header" type="button" class="btn btn-info pull-right">
              Add Header
            </button>
          </div>
        </div>
      </div>
      <ul class="well nav nav-list">
        <% @routes.each do |controller, routes| %>
          <li class="nav-header"><%= controller %></li>
          <% routes.each do |route| %>
            <li>
              <a href="<%= route_path(route[:id]) %>">
                <div class="label-api label-api-full">
                  <span class="label label-important"><%= route[:verb] %></span>
                </div>
                <strong><%= route[:path] %></strong>
              </a>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="show-api-div" class="span7">
    <div class="div-container">
    </div>
  </div>
</div>
